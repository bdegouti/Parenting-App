<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gameView_imageviewResultIcon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10sp"
        android:maxWidth="40dp"
        android:maxHeight="40dp" />

    <TextView
        android:id="@+id/gameView_textViewCreationDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/gameView_imageviewResultIcon"
        android:text="TextView" />

    <TextView
        android:id="@+id/gameView_textviewPickerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameView_textViewCreationDateTime"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10sp"
        android:layout_toEndOf="@+id/gameView_imageviewResultIcon"
        android:fontFamily="@font/flavors_regular"
        android:text="TextView"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/gameView_textviewFlipResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameView_textviewPickerName"
        android:layout_marginStart="10sp"
        android:layout_marginBottom="10sp"
        android:layout_toEndOf="@+id/gameView_imageviewResultIcon"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>